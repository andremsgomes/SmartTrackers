<div id="<%= dom_id gauge %>">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title text-center"><%= gauge.name %></h3>
      <h6 class="card-subtitle mb-2 text-muted text-center"><%= gauge.begin_date.strftime("%Y/%m/%d") %> - <%= gauge.end_date.strftime("%Y/%m/%d") %></h6>
    </div>
  </div>
</div>
